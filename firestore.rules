rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isAdmin() {
      return request.auth != null && request.auth.token.email == "jmjrice94@gmail.com";
    }

    match /Posts/{postId} {
      // Allow admin to read all posts, non-admin users can only read published posts
      // The client query uses where('published', '==', true) for non-admin users
      // This rule must match that query pattern for Firestore to allow the query
      // Admin users don't filter by published status and can see all posts
      allow read: if isAdmin() || resource.data.published == true;
      allow create, update, delete: if isAdmin();
    }

    match /Images/{document} {
      allow read: if true;
      allow create, update, delete: if isAdmin();
    }

    match /Quotes/{document} {
      allow read: if true;
      allow create, update, delete: if isAdmin();
    }

    match /siteContent/{document} {
      allow read: if true;
      allow create, update, delete: if isAdmin();
    }

    match /{document=**} {
      allow read, write: if false;
    }
  }
}
