</ol></section>
</main>
<footer>&copy; <span id="year"></span> Joe Rice. All rights reserved.</footer>
<script src="https://cdn.jsdelivr.net/npm/marked/marked.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/js-yaml@4.1.0/dist/js-yaml.min.js"></script>
<script>
document.getElementById('year').textContent=new Date().getFullYear();
const pinned=[];const notes=[];const pageSize=10;let page=0;
const pinnedGrid=document.getElementById('pinnedGrid');const entryGrid=document.getElementById('entryGrid');
const prevBtn=document.getElementById('prevBtn');const nextBtn=document.getElementById('nextBtn');
const postView=document.getElementById('postView');const postContent=document.getElementById('postContent');
function renderPinned(){pinnedGrid.innerHTML=pinned.map(p=>`<a class="entry" data-url="${p.url}">${p.title}</a>`).join('');attachClickHandlers();}
function renderPage(){const start=page*pageSize;const slice=notes.slice(start,start+pageSize);entryGrid.innerHTML=slice.map(n=>`<a class="entry" data-url="${n.url}">${n.title}</a>`).join('');prevBtn.disabled=page===0;nextBtn.disabled=start+pageSize>=notes.length;attachClickHandlers();}
prevBtn.onclick=()=>{if(page>0){page--;renderPage();}};
nextBtn.onclick=()=>{if((page+1)*pageSize<notes.length){page++;renderPage();}};
function attachClickHandlers(){document.querySelectorAll('.entry').forEach(el=>{el.onclick=e=>openPost(e.currentTarget.dataset.url);});}
async function openPost(url){try{const raw=await fetch(url).then(r=>r.text());const data=jsyaml.load(raw);postContent.innerHTML=marked.parse(data.content??'');postView.style.display='block';window.scrollTo({top:postView.offsetTop-20,behavior:'smooth'});}catch(err){postContent.innerHTML='<p>Unable to load this post.</p>';postView.style.display='block';console.error(err);}}
document.getElementById('closePost').onclick=()=>{postView.style.display='none';};
(async()=>{try{const loaderText=await fetch('posts/loader.yml').then(r=>r.text());const loaderData=jsyaml.load(loaderText);for(const p of loaderData.posts){const url=`posts/${p.file}`;const raw=await fetch(url).then(r=>r.text());const data=jsyaml.load(raw);const entry={title:data.title,date:data.date,url,pinned:data.pinned};(entry.pinned?pinned:notes).push(entry);}notes.sort((a,b)=>new Date(b.date)-new Date(a.date));renderPinned();renderPage();}catch(err){console.error('Loader failed',err);}})();
document.getElementById('q').addEventListener('input',e=>{const v=e.target.value.toLowerCase();document.querySelectorAll('.entry').forEach(el=>{el.style.display=el.textContent.toLowerCase().includes(v)?'':'none';});});
const quoteBox=document.getElementById('quoteBox');const quoteText=document.getElementById('quoteText');const quoteCite=document.getElementById('quoteCite');const progBar=document.getElementById('quoteProgress');let quotes=[],idx=0,slideMs=7000;
function resetBar(){progBar.style.transition='none';progBar.style.width='100%';void progBar.offsetWidth;progBar.style.transition='width linear 6.4s';progBar.style.width='0%';}
function showQuote(i){const q=quotes[i];quoteText.textContent=`“${q.text}”`;quoteCite.textContent=`— ${q.author??'Unknown'}`;quoteBox.classList.add('active');resetBar();}
(async()=>{try{const qYaml=await fetch('quotes/quotes.yaml').then(r=>r.text());quotes=jsyaml.load(qYaml).quotes||[];if(!quotes.length)return;showQuote(0);setInterval(()=>{quoteBox.classList.remove('active');setTimeout(()=>{idx=(idx+1)%quotes.length;showQuote(idx);},600);},slideMs);}catch(err){console.error('Quotes failed',err);}})();
window.addEventListener('DOMContentLoaded',()=>{requestAnimationFrame(()=>document.body.classList.add('loaded'));});
const contactForm=document.querySelector('.contact form');const sendBtn=contactForm.querySelector('button[type="submit"]');
contactForm.addEventListener('submit',()=>{sendBtn.disabled=true;setTimeout(()=>{contactForm.reset();sendBtn.disabled=false;},1000);});
</script>
</body>
</html>
