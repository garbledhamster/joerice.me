{
  "name": "joerice.me",
  "version": "1.0.0",
  "type": "module",
  "description": "Joe Rice's personal portfolio website",
  "scripts": {
    "format": "biome format --write .",
    "format:check": "biome format .",
    "lint": "npm run lint:biome && npm run lint:html && npm run lint:css && npm run lint:js",
    "lint:biome": "biome check --write .",
    "lint:html": "html-validate \"*.html\"",
    "lint:html:vnu": "java -jar node_modules/vnu-jar/build/dist/vnu.jar --skip-non-html index.html contribute.html",
    "lint:css": "stylelint \"**/*.css\" --fix",
    "lint:js": "eslint \"assets/js/**/*.js\" --fix",
    "check:all": "npm run format:check && npm run lint:biome && npm run lint:html && npm run lint:css && npm run lint:js",
    "prepare": "husky"
  },
  "keywords": [
    "portfolio",
    "website"
  ],
  "author": "Joe Rice",
  "license": "ISC",
  "devDependencies": {
    "@biomejs/biome": "^2.3.11",
    "eslint": "^9.39.2",
    "html-validate": "^10.6.0",
    "husky": "^9.1.7",
    "stylelint": "^17.0.0",
    "stylelint-config-standard": "^40.0.0",
    "vnu-jar": "^26.1.11"
  }
}
